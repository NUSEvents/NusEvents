<?xml version="1.0" encoding="utf-8"?>

   <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout


    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"

        android:orientation="vertical"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Event Name"
            android:inputType="textCapWords"
            android:id="@+id/event_name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organized by"
            android:id="@+id/organize"
            android:inputType="textCapWords"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="About the Event"
            android:id="@+id/about_event"
            android:inputType="textMultiLine"
            />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact details(Email ID)"
        android:id="@+id/contact_details"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location of Event"
        android:id="@+id/location"
        android:inputType="textCapWords"/>


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"

        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ticket Booking Link"
        android:id="@+id/bookTicket"
        android:inputType="textWebEditText"
        android:visibility="gone"

        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            >

            <CheckBox

                android:id="@+id/goodieBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Goodie Bags"
                android:layout_gravity="start"


                />
            <CheckBox
                android:layout_gravity="end"

                android:id="@+id/snacksBox"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:layout_height="wrap_content"
                android:text="Free Snacks/Food"


                />






        </LinearLayout>

    <ImageButton
        android:id="@+id/photoPickerButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/ic_menu_gallery"
        android:contentDescription="Add Event Poster"
        android:clickable="true"

        />


    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Start Date"
            android:onClick="showDatePickerDialog"
            android:background="@color/colorPrimary"

            android:id="@+id/datepicker"
            android:layout_marginBottom="8dp"
            android:textColor="@color/authui_colorPrimaryDark"

            />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Start Time"
        android:onClick="showTimePickerDialog"
        android:id="@+id/timepicker"
        android:background="@color/colorPrimary"
        android:textColor="@color/authui_colorPrimaryDark"

        />

    <Button
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Finish Date"
        android:onClick="showDateFinishPickerDialog"

        android:background="@color/authui_colorPrimaryDark"
        android:textColor="@color/colorPrimary"

        android:id="@+id/datepickerfinish"
        android:layout_marginBottom="8dp"

        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Finish Time"
        android:onClick="showTimeFinishPickerDialog"
        android:id="@+id/timepickerfinish"
        android:background="@color/authui_colorPrimaryDark"
        android:textColor="@color/colorPrimary"

        />

     <!--   <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time of Event in 24-hour format(HH:MM)"
            android:id="@+id/time_event"
            android:inputType="textCapWords"/>

            -->


    <Button
        android:id="@+id/sendButton"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:background="@drawable/submitevent"
android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:textStyle="bold" />



</LinearLayout>

    </ScrollView>
