<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/photoImageView1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"

            />


        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ORGANIZED BY"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/organize"
            android:textColor="#000000"
            android:paddingBottom="16dp"

            android:paddingLeft="16dp"
            />
    -->
        <TextView
            android:textAlignment="center"



            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/organize_by1"
            android:textStyle="normal"
            android:textSize="22sp"
            android:textColor="#0277BD"
            android:paddingBottom="16dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textAlignment="center"

            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#000000"
            android:id="@+id/about_single_event1"
            android:paddingBottom="16dp"/>

        <TextView
            android:paddingLeft="16dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_the_event1"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="normal"
            android:paddingBottom="16dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp"
            >
            <TextView
                android:layout_marginLeft="8dp"
                android:text="Number of Bookmarks"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number1"
                android:textColor="#000000"
                android:textSize="22sp"

                />


            <TextView
                android:layout_marginLeft="32dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/number_event1"
                android:textColor="#0277BD"
                android:textSize="22sp"
                android:textStyle="normal"
                />



        </LinearLayout>



        <Button
            android:padding="8dp"
            android:id="@+id/free1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/authui_colorPrimaryDark"
            android:text="FREE"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:id="@+id/goodieFull1"

                >


                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="start"
                    android:id="@+id/goodieImage1"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/goodieText1"
                    android:text="Goodie Bags"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_toRightOf="@+id/goodieImage1"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/snacksFull1"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="start"
                    android:id="@+id/snacksImage1"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/snacksText1"
                    android:text="Free Snacks"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_toRightOf="@+id/snacksImage1"
                    />


            </RelativeLayout>






        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Begins At"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000000"
                android:id="@+id/about_TIME_event1"
                android:paddingBottom="8dp"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="#0277BD"
                android:textSize="22sp"
                android:id="@+id/about_time1"
                android:layout_below="@+id/about_TIME_event1"
                />

            <TextView

                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ends At"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000000"
                android:id="@+id/about_TIMEND_event1"
                android:paddingBottom="8dp"


                />

            <TextView
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="#0277BD"
                android:textSize="22sp"
                android:id="@+id/about_timeEND1"
                android:layout_below="@+id/about_TIMEND_event1"

                /> </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_height="match_parent">

            <ImageView

                android:background="@drawable/location"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="25sp"
                android:id="@+id/about_location_event1"
                android:paddingBottom="16dp"
                android:onClick="locationShow1"
                />



            <TextView

                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="22sp"
                android:textColor="#0277BD"
                android:id="@+id/about_loc_event1"
                />


        </LinearLayout>


        <!--  <TextView
              android:paddingLeft="16dp"

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/contact_admin"
              android:text="Contact detail(Email ID)"
              android:textAllCaps="true"
              android:textStyle="bold"
              android:textColor="#000000"
              android:textSize="25sp"
              android:paddingBottom="16dp"
              />

              -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            android:padding="16dp">



            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="ENQUIRE"
                android:background="@drawable/question"
                android:textSize="8sp"
                android:textStyle="bold"
                android:id="@+id/know_more1"
                android:onClick="sendIntent"
                android:layout_gravity="center"



                />

            <TextView

                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="22sp"
                android:textColor="#0277BD"
                android:id="@+id/contact_details_admin1"
                />

        </LinearLayout>


        <Button

            android:layout_marginTop="16dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/addToCalendar1"
            android:background="@drawable/add_calendar"
            android:layout_marginBottom="32dp"
            android:onClick="addCalendar"
            android:layout_gravity="center"

            />







            <CheckBox

                android:layout_marginStart="64dp"
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/starStyle"
                android:text="Delete the BookMarked Event"
                android:onClick="unBookmark"
                android:checked="true"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="16dp"

                />






    </LinearLayout>

</ScrollView>
